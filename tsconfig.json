{
    "compilerOptions": {
        "outDir":"dist",
        "noImplicitAny": true,
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "es5"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true, // compile at runtime
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react",
        "isolatedModules": true
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "./dist/**/*",
        "./node_modules",
    ]
}