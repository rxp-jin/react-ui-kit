{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "es5"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react",
        "isolatedModules": true
    },
    "include": [
        "src"
    ]
}